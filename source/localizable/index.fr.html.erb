<div class="top-banner">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 d-flex flex-column justify-content-center align-items-center h-100">
        <div class="d-flex justify-content-center mt-5 mb-3">
          <%= image_tag "profile.jpeg", alt: "Pierre_photo", class: 'avatar-large mx-4'  %>
        </div>
        <% localized_paths_for(current_page).each do |text, path| %>
          <%= link_to text, path %>
        <% end %>
        <div class="hero">
          <h1 class="title-main moving">Pierre Richemond</h1>
        </div>
        <div class="nav-cta">
          <ul>
            <li><a href="#about-me"><span class="nav-link"><%= t("about_h2") %></span></a></li>
            <li><a href="#projects"><span class="nav-link"><%= t("projects") %></span></a></li>
            <li><a href="#tools"><span class="nav-link"><%= t("tools_skills") %></span></a></li>
            <li><a href="#contact"><span class="nav-link">Contacts</span></a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <!-- About Section -->
  <div class="about-text pinky my-4 p-2" id="about-me">
    <h2 class='about-h2 moving'><%= t("about_h2") %></h2>
    <p class='about-p'><%= t("about_p") %></p>
  </div>
  <!-- Projects Section -->
  <div class="pinky">
    <div class="row">
      <div class="col-12">
        <div class="main-container" id="projects" style="margin-bottom: 0;background-color: transparent;padding-bottom: 0">
          <h2 class='project-h2 moving'><%= t("projects") %></h2>
          <p class='project-p'><%= t("projects_p") %></p>
        </div>
        <div class="cards" style="padding-top: 4px;">
          <%# Condition locale english or french here %>
          <%# data.en_products || data.fr_products %>
          <% data.fr_products.each do |product| %>
            <div>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(product.image) %>)">
                <h3 class="white-text mt-2"><%= t("click_for_more") %></h3>
                <div class="description">
                  <h5 class="header-card"><%= product.name %></h5>
                  <h6 class='subheader-card'><%= product.subname %></h6>
                  <p><%= product.description %></p>
                  <div class="d-flex justify-content-between align-items-center mt-1">
                    <div class="card-tags">
                      <% product.tags.each do |tag| %>
                        <span><i class="<%= tag %>"></i></span>
                      <% end %>
                    </div>
                    <div>
                      <% link_to product.url, class: 'external-link', target: '_blank' do %>
                        <i class="fas fa-external-link-alt"></i>
                      <% end %>
                      <% link_to product.github, class: 'external-link', target: '_blank' do %>
                        <i class="fab fa-github"></i>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- skills Section -->
  <div class="pinky my-4 p-2">
    <div class='about-h2' id="tools">
      <h2 class = "moving"><%= t("tools_h2") %></h2>
    </div>
    <div class="d-flex justify-content-around">
      <div class="flipcard">
        <div class="card__inner">
          <div class="card__face card__face--front">
            <h2><%= t("skills") %></h2>
          </div>
          <span class="flip-icon"><i class="fas fa-sync-alt"></i></span>
          <div class="card__face card__face--back">
            <div class="card__content">
              <div class="card__body">
                <h3>Ruby</h3>
                <h3>HTML</h3>
                <h3>CSS</h3>
                <h3>JavaScript</h3>
                <h3>SQL</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="flipcard">
        <div class="card__inner">
          <div class="card__face card__face--front">
            <h2 ><%= t("tools") %></h2>
          </div>
          <span class="flip-icon"><i class="fas fa-sync-alt"></i></span>
          <div class="card__face card__face--back">
            <div class="card__content">
              <div class="card__body">
                <h3>Ruby on Rails</h3>
                <h3>Bootstrap</h3>
                <h3>PostgreSQL</h3>
                <h3>Git</h3>
                <h3>Heroku</h3>
                <h3>Stimulus</h3>
                <h3>React</h3>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="flipcard">
        <div class="card__inner">
          <div class="card__face card__face--front">
            <h2><%= t("studies") %></h2>
          </div>
          <span class="flip-icon"><i class="fas fa-sync-alt"></i></span>
          <div class="card__face card__face--back">
            <div class="card__content">
              <div class="card__body">
                <%= link_to "JavaScript30", "https://javascript30.com/", target: '_blank' %>
                <%= link_to "GoRails", "https://gorails.com/", target: '_blank' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="pinky my-4 p-2">
    <div class='about-h2' id="contacts">
      <h2 class = "moving">Contact</h2>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="main-container" id="contact" style="padding: 48px;margin-bottom: 0">
          <div class="navigation-buttons d-flex justify-content-center">
            <div class="navigation-button d-flex flex-column justify-content-center align-items-center">
              <i class="fas fa-envelope" style="font-size: 28px;"></i>
              <%= mail_to "pierreambroise@hotmail.fr", "", class: 'navigation-button-link' %>
            </div>
            <div class="navigation-button d-flex flex-column justify-content-center align-items-center">
              <i class="fab fa-github-square" style="font-size: 28px;"></i>
              <%= link_to "", "https://github.com/PierreRichemond/", target: '_blank', class: 'navigation-button-link' %>
            </div>
            <div class="navigation-button d-flex flex-column justify-content-center align-items-center">
              <i class="fab fa-linkedin" style="font-size: 28px;"></i>
              <%= link_to "", "https://www.linkedin.com/in/pierre-richemond/", target: '_blank', class: 'navigation-button-link'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
