<div class="pinky my-4 p-2" data-aos='fade-left' data-aos-easing="ease-out-cubic" data-aos-duration="500">
  <div class='about-h2' id="tools">
    <h2 class = "name-gradient-left-to-right"><%= t("tools_h2") %></h2>
  </div>
  <div class="tool-cards">
    <div class="flipcard">
      <div class="card__inner">
        <div class="card__face card__face--front">
          <h2><%= t("skills") %></h2>
        </div>
        <span class="flip-icon"><i class="fas fa-sync-alt"></i></span>
        <div class="card__face card__face--back">
          <div class="card__content">
            <div class="card__body">
              <h3>Ruby</h3>
              <h3>HTML - CSS</h3>
              <h3>JavaScript</h3>
              <h3>SQL</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="flipcard">
      <div class="card__inner">
        <div class="card__face card__face--front">
          <h2 ><%= t("tools") %></h2>
        </div>
        <span class="flip-icon"><i class="fas fa-sync-alt"></i></span>
        <div class="card__face card__face--back">
          <div class="card__content">
            <div class="card__body">
              <h3>Ruby on Rails</h3>
              <h3>Bootstrap</h3>
              <h3>Stimulus</h3>
              <h3>PostgreSQL</h3>
              <h3>Git - Github</h3>
              <h3>RSpec-Capybara</h3>
              <h3>Heroku</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="flipcard">
      <div class="card__inner">
        <div class="card__face card__face--front">
          <h2><%= t("studies") %></h2>
        </div>
        <span class="flip-icon"><i class="fas fa-sync-alt"></i></span>
        <div class="card__face card__face--back">
          <div class="card__content">
            <div class="card__body">
              <h3>React</h3>
              <h3><%= t("book") %>: <br>
                99bottles of OOP</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
