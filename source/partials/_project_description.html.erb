
  <div class="col-12 col-lg-7 description">
    <h3 class="header-card"><%= product.name %></h3>
    <h4 class='subheader-card'><%= product.subname %></h4>
    <p class= pb-0> <%= product.description %></p>
    <p class= pb-0><%= product.techs %></p>
    <p class= pb-0><%= product.tests %></p>
    <p><%= product.recommand %></p>
    <div class="d-flex justify-content-between align-items-center mt-1 logos">
      <div class="card-tags">
        <% product.tags.each do |tag| %>
          <span><i class="<%= tag %>"></i></span>
        <% end %>
      </div>
      <div>
        <% if product.url.present?%>
          <% link_to product.url, class: 'external-link', target: '_blank' do %>
            <i class="fas fa-external-link-alt"></i>
          <% end %>
        <% end %>
          <% if product.github.present?%>
          <% link_to product.github, class: 'external-link', target: '_blank' do %>
            <i class="fab fa-github"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
